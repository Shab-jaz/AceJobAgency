}

<h1 class="text-white">Forgot Password</h1>
 
<form method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="mb-4">
		<div class="form-outline">
			<input type="email" id="form3Example3" class="form-control" asp-for="FModel.Email" />
